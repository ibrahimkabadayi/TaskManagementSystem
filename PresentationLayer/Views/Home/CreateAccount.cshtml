@page
@model TaskManagementSystem.Views.CreateAccount

@{
    Layout = "Layout";
    var email = ViewBag.Email as string;
    var userName = ViewBag.UserName as string;
}

<link rel="stylesheet" href="~/css/CreateAccountPageStyleSheet.css"/>

<div style="margin-bottom: 15px;">
    <a href="/Home/SignIn" style="text-decoration: none; color: #5e6c84; font-size: 14px;">
        <i class="fa-solid fa-arrow-left"></i> Giriş Yap'a Dön
    </a>
</div>

<h3 class="account-title">Hesap Oluştur</h3>

<div class="input-group">
    <label for="name-Input" class="input-label">Ad Soyad</label>
    <i class="fa-solid fa-user input-icon"></i>
    <input type="text" id="name-Input" class="txt-input" value="@userName" placeholder="Adınız Soyadınız">
</div>

<div class="input-group">
    <label for="email-input" class="input-label">E-Posta Adresi</label>
    <i class="fa-solid fa-envelope input-icon"></i>
    <input type="email" id="email-input" class="txt-input" value="@email" placeholder="ornek@email.com">
</div>

<div class="privacy-section">
    <i class="fa-solid fa-circle-info info-icon"></i>
    <div class="privacy-text">
        Devam ederek, TaskFlow'un <span class="privacy-link">Hizmet Şartları</span>'nı ve 
        <span class="privacy-link">Gizlilik Politikası</span>'nı kabul etmiş olursunuz.
    </div>
</div>

<button class="btn-primary" onclick="nextButtonClick()">Devam Et</button>

<script src="~/js/CreateAccountPageScript.js"></script>