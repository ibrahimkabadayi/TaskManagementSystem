@page
@model TaskManagementSystem.Views.EmailCodeVerification

@{
    Layout = Layout;
    var name = ViewData["Name"] as string;
    var email = ViewData["Email"] as string;
}

<link rel="stylesheet" href="~/css/EmailVerificationStyleSheet.css"/>

<div class="arrow-and-email-container">
    <div class="back-arrow-container">
        <p class= "back-arrow" style="color:blue" onclick="BackArrowClick(@name, @email)">
            ←
        </p>
    </div>
    <div class="email-container">
        <p class="email">@email</p>
    </div>
</div>
    
<p id="sign-in-text">Enter Email Code</p>
<div class="Input-Area">
    <div class="Input-Row">
        <label for="code-Input" class="input-label">Code:</label>
        <input type="text" id="code-Input" class="txt-input">
    </div>
</div>
    
<div class="button-container">
    <button class="send-again-button" onclick="SendEmailCodeAgain(@email)">Send Again</button>
    <button class="next-button" onclick="VerifyEmailCode(@email)">Next</button>
</div>

<script src="~/js/EmailVerificationScript.js"></script>