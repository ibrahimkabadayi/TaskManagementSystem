@{
    Layout = "Layout";
    var name = ViewData["Name"] as string;
    var email = ViewData["Email"] as string;
}

<link rel="stylesheet" href="~/css/EmailVerificationStyleSheet.css"/>

<div style="margin-bottom: 10px;">
    <span onclick="BackArrowClick('@name', '@email')" style="cursor: pointer; color: #5e6c84;">
        <i class="fa-solid fa-arrow-left"></i> Geri
    </span>
</div>

<div class="verification-header">
    <div class="verification-icon">
        <i class="fa-solid fa-envelope-open-text"></i>
    </div>
    <h3 class="verification-title">Enter Code</h3>
    <p class="verification-subtitle">
        We have sent verification code to <span class="email-highlight">@email</span> address.
    </p>
</div>

<div class="input-group">
    <input type="text" id="code-Input" class="txt-input code-input" placeholder="000000" maxlength="6">
</div>
    
<div class="action-buttons">
    <button class="btn-verify" onclick="VerifyEmailCode('@email', '@name')">Verify and Continue</button>
    <button class="btn-resend" onclick="SendEmailCodeAgain('@email')">Resend Code</button>
</div>

<script src="~/js/EmailVerificationScript.js"></script>