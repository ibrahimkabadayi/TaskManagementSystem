@page

@{
    Layout = null;
    var profileLetters = ViewBag.ProfileLetters;
    var profileColor = ViewBag.ProfileColor;
    var userId = ViewBag.UserId;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TaskFLow | Streamline Your Workflow</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/HomeStyleSheet.css"/>
    <style></style>
</head>
<body>

<nav>
    <div class="container">
        <div class="nav-inner">
            <div class="logo">
                <i class="ri-layout-grid-fill"></i> TaskFlow
            </div>
            <ul class="nav-links">
                <li><a href="#">Product</a></li>
                <li><a href="#">Solutions</a></li>
                <li><a href="#">Enterprise</a></li>
                <li><a href="#">Pricing</a></li>
            </ul>
            <div class="nav-actions">
                @if (User.Identity!.IsAuthenticated)
                {
                    <a href="@Url.Action("TaskFlow", "Section", new { userId = 1 })" class="btn btn-primary" style="text-decoration: none; margin-right: 15px;">
                        <i class="ri-kanban-view-2"></i> My Board
                    </a>

                    <div class="account-section" style="position: relative; display: inline-block;">
                        @{
                            var userName = User.Identity.Name ?? "User";
                        }

                        <div class="profile-trigger" onclick="toggleDropdown()" style="cursor: pointer; display: flex; align-items: center; gap: 10px;">
                            <div class="profile-avatar" style="width: 40px; height: 40px; 
                            background-color: @profileColor; 
                            color: white; 
                            border-radius: 50%; 
                            display: flex; 
                            align-items: center; 
                            justify-content: center; 
                            font-weight: 600; 
                            font-size: 1.1rem;
                            box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
                                @profileLetters
                            </div>
                            <span style="font-weight: 500; color: var(--text-main); font-size: 0.95rem;">@userName</span>
                            <i class="ri-arrow-down-s-line" style="color: var(--text-muted);"></i>
                        </div>

                        <div id="userDropdown" class="account-dropdown" style="
                        display: none; 
                        position: absolute; 
                        top: 120%; 
                        right: 0; 
                        background: white; 
                        border-radius: 12px; 
                        box-shadow: 0 10px 30px -5px rgba(0,0,0,0.15); 
                        width: 200px; 
                        padding: 10px; 
                        border: 1px solid #e2e8f0; 
                        z-index: 1000;">
                            
                            <a href="@Url.Action("Profile", "Account")" style="display: block; padding: 10px; color: #475569; text-decoration: none; border-radius: 6px;">
                                <i class="ri-user-line"></i> Profile
                            </a>
                            <a href="@Url.Action("Logout", "Authenticate")" style="display: block; padding: 10px; color: #ef4444; text-decoration: none; border-radius: 6px;">
                                <i class="ri-logout-box-r-line"></i> Log out
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <button class="btn btn-signin" onclick="SignIn()" style="background:none; border:none; color:var(--text-muted); font-weight:600; cursor:pointer;">Sign In</button>
                    <button class="btn btn-primary" onclick="CreateAccount()">Get Started</button>
                }
            </div>
        </div>
    </div>
</nav>

<section class="hero">
    <div class="container">
        <div class="hero-grid">
            <div class="hero-content">
                <h1>Organize work,<br><span>amplify results.</span></h1>
                <p>The all-in-one workspace that helps teams plan, organize, and collaborate. From simple tasks to complex roadmaps.</p>
                <div class="hero-btns" style="display:flex; gap:15px;">
                    <button class="btn btn-primary"> Start for free <i class="ri-arrow-right-line"></i></button>
                    <button class="btn btn-outline"><i class="ri-play-circle-line"></i> Watch Demo</button>
                </div>
            </div>

            <div class="hero-visual">
                <div class="app-window">
                    <div class="app-header">
                        <div class="dot red"></div>
                        <div class="dot yellow"></div>
                        <div class="dot green"></div>
                    </div>
                    <div class="app-body">
                        <div class="sidebar">
                            <div style="padding:15px;">
                                <div class="skeleton-bar" style="width:60%; margin-bottom:15px; background: #dbeafe;"></div>
                                <div class="skeleton-bar" style="margin-bottom:8px;"></div>
                                <div class="skeleton-bar" style="margin-bottom:8px;"></div>
                                <div class="skeleton-bar" style="margin-bottom:8px;"></div>
                            </div>
                        </div>
                        <div class="main-view">
                            <div class="skeleton-bar" style="width:40%; height:20px; background: #bfdbfe;"></div>
                            <div class="skeleton-card" style="display:flex; align-items:center; padding:0 15px; justify-content:space-between;">
                                <div style="width: 30px; height: 30px; border-radius: 50%; background: #eff6ff;"></div>
                                <div style="width: 60%; height: 8px; background: #f1f5f9; border-radius: 4px;"></div>
                            </div>
                            <div class="skeleton-card" style="display:flex; align-items:center; padding:0 15px; justify-content:space-between;">
                                <div style="width: 30px; height: 30px; border-radius: 50%; background: #eff6ff;"></div>
                                <div style="width: 50%; height: 8px; background: #f1f5f9; border-radius: 4px;"></div>
                            </div>
                            <div class="skeleton-card" style="display:flex; align-items:center; padding:0 15px; justify-content:space-between;">
                                <div style="width: 30px; height: 30px; border-radius: 50%; background: #eff6ff;"></div>
                                <div style="width: 70%; height: 8px; background: #f1f5f9; border-radius: 4px;"></div>
                            </div>
                        </div>
                    </div>

                    <div class="floating-badge">
                        <div class="check-circle"><i class="ri-check-line"></i></div>
                        <div>
                            <div style="font-weight:700; font-size:0.9rem; color:var(--text-main)">Project Done</div>
                            <div style="font-size:0.8rem; color:var(--text-muted)">Ahead of schedule</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="brands">
    <div class="container">
        <p>Trusted by innovative teams at</p>
        <div class="brands-wrapper">
            <h3>ACME</h3>
            <h3>GlobalBank</h3>
            <h3>TechCorp</h3>
            <h3>Nebula</h3>
        </div>
    </div>
</div>

<section class="features" id="features">
    <div class="container">
        <div class="section-header">
            <span class="badge">Why TaskFLow?</span>
            <h2>Everything you need to ship faster</h2>
            <p>Powerful features configured for your success. Manage everything from high-level planning to daily tasks.</p>
        </div>

        <div class="features-grid">
            <div class="feature-card">
                <div class="icon-box">
                    <i class="ri-kanban-view-2"></i>
                </div>
                <h3>Kanban Boards</h3>
                <p>Visualize your workflow with flexible boards. Drag and drop tasks to keep everyone aligned on progress.</p>
            </div>

            <div class="feature-card">
                <div class="icon-box">
                    <i class="ri-group-line"></i>
                </div>
                <h3>Team Collaboration</h3>
                <p>Real-time comments, mentions, and file sharing ensure your team never misses a beat.</p>
            </div>

            <div class="feature-card">
                <div class="icon-box">
                    <i class="ri-pie-chart-line"></i>
                </div>
                <h3>Smart Analytics</h3>
                <p>Gain insights into team velocity and project health with automatically generated charts.</p>
            </div>

            <div class="feature-card">
                <div class="icon-box">
                    <i class="ri-rocket-line"></i>
                </div>
                <h3>Automation</h3>
                <p>Set up rules to automatically move tasks, assign owners, and send notifications. Save time for real work.</p>
            </div>

            <div class="feature-card">
                <div class="icon-box">
                    <i class="ri-lock-password-line"></i>
                </div>
                <h3>Enterprise Security</h3>
                <p>Bank-grade encryption, SSO, and advanced permission controls to keep your data safe.</p>
            </div>

            <div class="feature-card">
                <div class="icon-box">
                    <i class="ri-smartphone-line"></i>
                </div>
                <h3>Mobile Ready</h3>
                <p>Access your projects from anywhere. Our mobile apps for iOS and Android keep you connected on the go.</p>
            </div>
        </div>
    </div>
</section>

<section class="cta-section">
    <div class="container">
        <div class="cta-box">
            <div class="circle-bg c1"></div>
            <div class="circle-bg c2"></div>
            <div class="cta-content">
                <h2>Ready to boost your productivity?</h2>
                <p>Join 20,000+ teams who use TaskFLow to deliver projects on time.</p>
                <button class="btn btn-white" onclick="CreateAccount()">Get Started for Free</button>
            </div>
        </div>
    </div>
</section>

<footer>
    <div class="container">
        <div class="footer-grid">
            <div class="footer-brand">
                <div class="logo">
                    <i class="ri-layout-grid-fill"></i> TaskFlow
                </div>
                <p>Making collaboration seamless for teams of all sizes. Built for speed, designed for clarity.</p>
            </div>

            <div class="footer-col">
                <h4>Product</h4>
                <ul>
                    <li><a href="#">Features</a></li>
                    <li><a href="#">Integrations</a></li>
                    <li><a href="#">Pricing</a></li>
                    <li><a href="#">Changelog</a></li>
                </ul>
            </div>

            <div class="footer-col">
                <h4>Resources</h4>
                <ul>
                    <li><a href="#">Documentation</a></li>
                    <li><a href="#">API Reference</a></li>
                    <li><a href="#">Community</a></li>
                    <li><a href="#">Blog</a></li>
                </ul>
            </div>

            <div class="footer-col">
                <h4>Company</h4>
                <ul>
                    <li><a href="#">About</a></li>
                    <li><a href="#">Careers</a></li>
                    <li><a href="#">Legal</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </div>
        </div>

        <div class="footer-bottom">
            &copy; 2025 TaskFLow Inc. All rights reserved.
        </div>
    </div>
</footer>
<script src="~/js/HomeScript.js"></script>
</body>
</html>