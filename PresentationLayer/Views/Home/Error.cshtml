@{
    Layout = null;
    var backPage = TempData["BackPage"]?.ToString() ?? "Index";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>Error - TaskFlow</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/ErrorStyleSheet.css"/>
</head>
<body>

<div class="error-card">
    <i class="fa-solid fa-triangle-exclamation error-icon"></i>
    
    <h1 class="error-title">Bir Hata Oluştu</h1>
    <p class="error-message">
        Beklenmedik bir sorunla karşılaştık. Lütfen tekrar deneyin veya sistem yöneticisi ile iletişime geçin.
    </p>

    <div class="error-details">
        <div class="detail-row">
            <span class="detail-label">Hata Mesajı:</span>
            <span class="detail-value">@ViewBag.ErrorMessage</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Tür:</span>
            <span class="detail-value">@ViewBag.ErrorType</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Kod:</span>
            <span class="detail-value">@ViewBag.ErrorStatusCode</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Zaman:</span>
            <span class="detail-value">@ViewBag.ErrorTimeStamp</span>
        </div>
    </div>

    <div class="btn-group">
        <button class="btn btn-secondary" onclick="GoBack('@backPage')">Geri Dön</button>
        <button class="btn btn-primary" onclick="ReturnToMenu()">Ana Sayfaya Dön</button>
    </div>
</div>

<script src="~/js/ErrorScript.js"></script>
</body>
</html>