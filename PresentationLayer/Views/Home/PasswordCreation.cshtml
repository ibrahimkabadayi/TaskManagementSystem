@page
@model TaskManagementSystem.Views.PasswordCreation

@{
    Layout = "Layout";
    var email = ViewData["Email"] as string;
    var name = ViewData["Name"] as string;
}

<link rel="stylesheet" href="~/css/PasswordCreationStyleSheet.css"/>

<div onclick="BackButtonClick('@name', '@email')" class="back-link">
    <i class="fa-solid fa-arrow-left"></i> Geri Dön
</div>

<h3 class="password-title">Şifre Belirleyin</h3>

<div class="input-group">
    <label class="input-label">E-Posta Adresi</label>
    <input type="text" class="password-input" value="@email" disabled style="background-color: #e9ecef; cursor: not-allowed;">
</div>

<div class="input-group">
    <label for="password-input" class="input-label">Şifre</label>
    <input type="password" id="password-input" class="password-input" placeholder="••••••••">
    <i class="fa-solid fa-eye toggle-password-icon" onclick="TogglePassword('password-input', this)"></i>
</div>

<div class="input-group">
    <label for="password-again-input" class="input-label">Şifre (Tekrar)</label>
    <input type="password" id="password-again-input" class="password-input" placeholder="••••••••">
    <i class="fa-solid fa-eye toggle-password-icon" onclick="TogglePassword('password-again-input', this)"></i>
</div>

<button class="btn-finish" onclick="ConfirmPassword('@name', '@email')">Kaydı Tamamla</button>

<script src="~/js/PasswordCreationScript.js"></script>